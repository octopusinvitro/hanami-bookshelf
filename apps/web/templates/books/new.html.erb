<h2>Add book</h2>

<% unless params.valid? %>
  <div class="errors">
    <h3>There was a problem with your submission</h3>
    <ul>
      <% params.error_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form action="<%= routes.books_path %>" method="POST" accept-charset="utf-8" id="book-form">
  <div class="input">
    <label for="book-title">Title</label>
    <input type="text" name="book[title]" id="book-title" value="">
  </div>
  <div class="input">
    <label for="book-author">Author</label>
    <input type="text" name="book[author]" id="book-author" value="">
  </div>
  <div class="controls">
    <button type="submit">Create Book</button>
  </div>
</form>
